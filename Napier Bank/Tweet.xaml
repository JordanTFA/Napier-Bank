<Window x:Class="Napier_Bank.Tweet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tweet" Height="400" Width="300">
    <Grid Margin="0,0,-341,-65">
        <Label x:Name="lblSender" Content="Sender:" HorizontalAlignment="Left" Margin="34,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSender" HorizontalAlignment="Left" Height="23" Margin="34,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" MaxLength="16"/>
        <Label x:Name="lblTweetText" Content="Tweet Text:" HorizontalAlignment="Left" Margin="34,150,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBody" HorizontalAlignment="Left" Height="134" Margin="34,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="231" MaxLength="140" TextChanged="txtBody_TextChanged"/>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="107,334,0,0" VerticalAlignment="Top" Width="75" Click="btnSubmit_Click"/>
        <Label x:Name="lblMessageID" Content="Message ID:" HorizontalAlignment="Left" Margin="34,10,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <TextBox x:Name="txtMessageID" HorizontalAlignment="Left" Height="23" Margin="34,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" IsReadOnly="True" IsEnabled="False"/>

    </Grid>
</Window>
